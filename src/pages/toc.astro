---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Table of Contents - The Book of Life";
const description = "Explore the chapters of life, from personal stories to thoughts on technology and humanity.";
---

<BaseLayout
  title={title}
  description={description}
  currentPath="/toc"
>
  <div class="book-spread">
    <div class="left-page">
      <div class="page-content">
        <h1>Contents</h1>
        <nav class="chapter-list">
          <a href="/chapters/about" class="chapter-link">
            <span class="chapter-number">I</span>
            <span class="chapter-title">About</span>
          </a>
          <a href="/chapters/travel" class="chapter-link">
            <span class="chapter-number">II</span>
            <span class="chapter-title">Travel</span>
          </a>
          <a href="/chapters/human" class="chapter-link">
            <span class="chapter-number">III</span>
            <span class="chapter-title">Human</span>
          </a>
          <a href="/chapters/ai" class="chapter-link">
            <span class="chapter-number">IV</span>
            <span class="chapter-title">AI</span>
          </a>
          <a href="/chapters/products" class="chapter-link">
            <span class="chapter-number">V</span>
            <span class="chapter-title">Products</span>
          </a>
        </nav>
      </div>
    </div>
    <div class="right-page">
      <div class="page-content">
        <blockquote>
          "Life is a book, and there are a thousand pages I have not yet read."
        </blockquote>
        <p class="book-description">
          Welcome to my digital book, a collection of thoughts, experiences, and discoveries. 
          Each chapter represents a different aspect of life, from personal journeys to 
          reflections on technology and humanity. Feel free to explore these pages at your own pace.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .book-spread {
    min-height: 100vh;
    display: flex;
    background: #f9f6ef;
    background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23e8e0d5' fill-opacity='0.4' fill-rule='evenodd'/%3E%3C/svg%3E");
  }

  .left-page, .right-page {
    flex: 1;
    background: #fff;
    position: relative;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  }

  .page-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 3rem;
    position: relative;
  }

  .left-page {
    margin-right: 1px;
    border-right: 1px solid rgba(0, 0, 0, 0.1);
  }

  .left-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 30px;
    height: 100%;
    background: linear-gradient(to right, rgba(0, 0, 0, 0.05), transparent);
    pointer-events: none;
  }

  .right-page {
    margin-left: 1px;
    border-left: 1px solid rgba(0, 0, 0, 0.1);
  }

  h1 {
    font-family: 'EB Garamond', serif;
    font-size: 2.5rem;
    color: #2c2c2c;
    margin-bottom: 3rem;
    text-align: center;
    font-weight: 400;
  }

  .chapter-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .chapter-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #2c2c2c;
    padding: 0.5rem;
    transition: all 0.3s ease;
  }

  .chapter-link:hover {
    background: rgba(74, 52, 40, 0.05);
    transform: translateX(10px);
  }

  .chapter-number {
    font-family: 'EB Garamond', serif;
    font-size: 1.2rem;
    color: #4a3428;
    margin-right: 1rem;
    min-width: 2rem;
  }

  .chapter-title {
    font-family: 'EB Garamond', serif;
    font-size: 1.4rem;
  }

  blockquote {
    font-family: 'EB Garamond', serif;
    font-size: 2rem;
    color: #4a3428;
    font-style: italic;
    margin: 0 0 3rem 0;
    padding-left: 2rem;
    border-left: 4px solid #4a3428;
    line-height: 1.4;
  }

  .book-description {
    font-family: 'EB Garamond', serif;
    font-size: 1.2rem;
    line-height: 1.8;
    color: #2c2c2c;
  }

  @media (max-width: 900px) {
    .book-spread {
      flex-direction: column;
    }

    .page-content {
      padding: 2rem;
    }

    .left-page {
      margin-right: 0;
      margin-bottom: 1px;
      border-right: none;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .right-page {
      margin-left: 0;
      border-left: none;
    }

    blockquote {
      font-size: 1.5rem;
      padding-left: 1rem;
    }
  }
</style> 