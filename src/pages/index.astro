---
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsletterModal from '../components/NewsletterModal.astro';

const title = "The Book of Life";
const description = "A journey through thoughts, experiences, and discoveries.";
const currentPath = "/";
---

<BaseLayout
  title={title}
  description={description}
  currentPath={currentPath}
>
  <!-- Resource Hints -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
  
  <!-- Preload Critical Resources -->
  <link 
    rel="preload" 
    href="/fonts/EBGaramond-Regular.woff2" 
    as="font" 
    type="font/woff2" 
    crossorigin 
  />

  <div class="book-container">
    <div class="book" id="book">
      <div class="book-cover">
        <div class="book-spine"></div>
        <div class="book-front">
          <div class="book-title">
            <h1>The Book of Life</h1>
            <p class="subtitle">A collection of thoughts, experiences, and discoveries</p>
            <p class="author">By Orvi</p>
            <div class="decorative-line"></div>
            <a 
              href="/chapters" 
              class="open-book" 
              data-page-turn
              aria-label="Open book to view table of contents"
            >
              <span>Open Book</span>
            </a>
          </div>
          <div class="book-decoration" aria-hidden="true">
            <div class="corner top-left"></div>
            <div class="corner top-right"></div>
            <div class="corner bottom-left"></div>
            <div class="corner bottom-right"></div>
          </div>
          <aside class="bookmark" aria-hidden="true">
            <span class="chapter-number">I</span>
          </aside>
          <div class="copyright">
            <p>Â© 2024 Orvi. All rights reserved.</p>
            <p class="publisher">First Edition</p>
          </div>
        </div>
        <div class="book-pages"></div>
        <div class="book-binding"></div>
      </div>
    </div>
  </div>

  <NewsletterModal client:load isOpen={false} />
</BaseLayout>

<script>
  // Show newsletter modal when book is opened
  const openBookButton = document.querySelector('.open-book');
  const newsletterModal = document.querySelector('.newsletter-modal') as HTMLElement | null;

  if (openBookButton && newsletterModal) {
    console.log('Index Page Script: Open book button and modal found.');
    openBookButton.addEventListener('click', (e) => {
      console.log('Index Page Script: Open book button clicked.');
      // Check if user has already subscribed or declined
      const hasSubscribed = localStorage.getItem('newsletterSubscribed');
      const hasDeclined = localStorage.getItem('newsletterDeclined');

      console.log('Index Page Script: localStorage - newsletterSubscribed:', hasSubscribed);
      console.log('Index Page Script: localStorage - newsletterDeclined:', hasDeclined);
      
      if (!hasSubscribed && !hasDeclined) {
        console.log('Index Page Script: Neither subscribed nor declined. Showing modal.');
        e.preventDefault(); // Prevent immediate navigation only if modal should show
        newsletterModal.setAttribute('data-open', 'true');
        // The closeModal function in the modal component will handle styles via data-open attribute CSS
        // No automatic navigation after delay if modal is shown, user must interact
        // Navigation will happen when 'No Thanks' is clicked, or after successful subscribe (handled in modal script)
      } else if (hasSubscribed) {
        console.log('Index Page Script: Already subscribed. Allowing navigation.');
        // Allow immediate navigation (browser handles href)
      } else if (hasDeclined) {
         console.log('Index Page Script: Already declined. Allowing navigation.');
        // Allow immediate navigation (browser handles href)
      }
    });

    // Close modal if escape key is pressed when modal is open
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && newsletterModal && newsletterModal.getAttribute('data-open') === 'true') {
        console.log('Index Page Script: Escape key pressed. Attempting to close modal.');
        // Setting data-open to false will trigger the CSS and modal component's script to hide it
        newsletterModal.setAttribute('data-open', 'false');
      }
    });
  }

  console.log('Index page script loaded.');
</script>

<style>
  /* Critical CSS */
  :root {
    --book-width: min(95vw, 520px);
    --book-height: min(85vh, 700px);
    --book-spine-width: 30px;
    --book-color: #3E2C1A;
    --book-color-light: #1C1B18;
  }

  .book-container {
    min-height: calc(100vh - var(--header-height));
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl) var(--spacing-md);
    background: var(--background-color);
  }

  .book {
    position: relative;
    width: var(--book-width);
    height: var(--book-height);
    transform-style: preserve-3d;
    transform: rotateY(-15deg);
    transition: transform 0.5s ease;
  }

  .book-cover {
    position: absolute;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transform-origin: left center;
    transition: transform 0.8s cubic-bezier(0.645, 0.045, 0.355, 1);
  }

  .book-front {
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, var(--book-color), var(--book-color-light));
    transform: translateZ(20px);
    border-radius: 3px;
    box-shadow: 
      0 8px 20px rgba(0, 0, 0, 0.2),
      inset 0 0 40px rgba(0, 0, 0, 0.2);
    backface-visibility: hidden;
  }

  .book-spine {
    position: absolute;
    width: var(--book-spine-width);
    height: 100%;
    background: linear-gradient(to right, var(--book-color-light), var(--book-color));
    transform: rotateY(90deg) translateZ(-20px);
    box-shadow: inset -3px 0 10px rgba(0, 0, 0, 0.4);
  }

  .book-pages {
    position: absolute;
    width: 100%;
    height: 100%;
    background: #fff;
    transform: translateZ(1px);
    border-radius: 3px;
    box-shadow: 
      inset 0 0 30px rgba(0, 0, 0, 0.1),
      0 0 0 1px rgba(0, 0, 0, 0.1);
    backface-visibility: hidden;
  }

  .book-binding {
    position: absolute;
    width: var(--book-spine-width);
    height: 100%;
    background: linear-gradient(to right, var(--book-color), var(--book-color-light));
    transform: rotateY(90deg) translateZ(20px);
    box-shadow: inset 3px 0 10px rgba(0, 0, 0, 0.4);
  }

  .book-title {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #ffffff;
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .book-title h1 {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin: 0;
    color: #ffffff;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    position: relative;
    padding-bottom: 1rem;
  }

  .book-title h1::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.2) 20%,
      rgba(255, 255, 255, 0.8) 50%,
      rgba(255, 255, 255, 0.2) 80%,
      transparent 100%
    );
    border-radius: 2px;
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
  }

  .subtitle {
    font-family: var(--font-body);
    font-size: clamp(1.2rem, 2vw, 1.5rem);
    color: #ffffff;
    opacity: 0.9;
    margin: 0;
  }

  .author {
    font-family: var(--font-body);
    font-size: clamp(1rem, 1.5vw, 1.2rem);
    color: #ffffff;
    opacity: 0.8;
    margin: 0;
  }

  .decorative-line {
    width: 100px;
    height: 2px;
    background: #ffffff;
    margin: 1rem 0;
  }

  .open-book {
    display: inline-block;
    padding: 1rem 2rem;
    background: #ffffff;
    color: var(--book-color);
    text-decoration: none;
    border-radius: 4px;
    font-family: var(--font-body);
    font-size: 1.1rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .open-book:hover {
    background: var(--accent-color);
    color: #ffffff;
    transform: translateY(-2px);
  }

  .book-decoration {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .corner {
    position: absolute;
    width: 40px;
    height: 40px;
    border: 2px solid #ffffff;
  }

  .top-left {
    top: 20px;
    left: 20px;
    border-right: none;
    border-bottom: none;
  }

  .top-right {
    top: 20px;
    right: 20px;
    border-left: none;
    border-bottom: none;
  }

  .bottom-left {
    bottom: 20px;
    left: 20px;
    border-right: none;
    border-top: none;
  }

  .bottom-right {
    bottom: 20px;
    right: 20px;
    border-left: none;
    border-top: none;
  }

  .bookmark {
    position: absolute;
    top: 0;
    right: 20px;
    width: 20px;
    height: 60px;
    background: #ffffff;
    clip-path: polygon(0 0, 100% 0, 100% 100%, 50% 80%, 0 100%);
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: var(--font-display);
    color: var(--book-color);
    font-size: 1.2rem;
    font-weight: 600;
  }

  .copyright {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    font-family: var(--font-body);
    font-size: 0.8rem;
    color: #ffffff;
    opacity: 0.7;
  }

  .copyright p {
    margin: 0;
    color: inherit;
  }

  /* Open book animation */
  body.book-opened .book-cover {
    transform: rotateY(-180deg);
  }

  body.book-opened .book {
    transform: rotateY(0deg);
  }

  @media (max-width: 768px) {
    :root {
      --book-width: 90vw;
      --book-height: 80vh;
      --book-spine-width: 20px;
    }

    .book-title h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .author {
      font-size: 0.9rem;
    }

    .corner {
      width: 30px;
      height: 30px;
    }

    .bookmark {
      width: 15px;
      height: 50px;
      right: 10px;
      font-size: 1rem;
    }

    .copyright {
      bottom: 10px;
      font-size: 0.7rem;
    }

    .open-book {
      padding: 0.8rem 1.5rem;
      font-size: 1rem;
    }
  }
</style> 