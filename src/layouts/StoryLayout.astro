---
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { initShareButtons } from '../scripts/share';

interface Props {
  story: CollectionEntry<'stories'>;
}

const { story } = Astro.props;
const { Content } = await story.render();
const { title, description, pubDate, author, image, readingTime, tags } = story.data;
const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Get all stories
const allStories = await getCollection('stories');
const currentIndex = allStories.findIndex((s: CollectionEntry<'stories'>) => s.slug === story.slug);
const nextStory = allStories[currentIndex + 1];

// Get category info
const categories = await getCollection('categories');
const category = categories.find((cat: CollectionEntry<'categories'>) => cat.slug === story.data.category);

// Get related stories by category (exclude current)
const relatedByCategory = allStories
  .filter((s: CollectionEntry<'stories'>) => 
    s.data.category === story.data.category && s.slug !== story.slug
  )
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);

// Get related stories by tags (exclude current and category matches)
const relatedByTags = allStories
  .filter((s: CollectionEntry<'stories'>) => {
    if (s.slug === story.slug || !story.data.tags || !s.data.tags) return false;
    if (s.data.category === story.data.category) return false; // Already in category section
    return story.data.tags.some((tag: string) => s.data.tags?.includes(tag));
  })
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Chapters', href: '/chapters' },
  ...(category ? [{ label: category.data.title, href: `/chapters/${category.slug}` }] : []),
  { label: title, href: `/chapters/stories/${story.slug}` }
];
---

<BaseLayout
  title={`${title} – The Book of Life`}
  description={description}
  currentPath={`/chapters/stories/${story.slug}`}
  image={image}
  type="article"
  pubDate={pubDate}
>
  <article class="story-container">
    <Breadcrumbs items={breadcrumbItems} />
    <div class="story-content">
      <header class="story-header">
        <h1>{title}</h1>
        <div class="story-meta">
          <span class="author">By {author}</span>
          <span class="date">{formattedDate}</span>
          {readingTime && <span class="reading-time">{readingTime} min read</span>}
        </div>
        {tags && (
          <div class="story-tags">
            {tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>

      {image && (
        <figure class="story-image">
          <img
            src={image}
            alt={title}
            width="1200"
            height="630"
            loading="eager"
            decoding="async"
            fetchpriority="high"
          />
        </figure>
      )}

      <div class="story-body">
        <Content />
      </div>

      <footer class="story-footer">
        <div class="share-buttons">
          <button class="share-button" data-share="twitter">
            Share on Twitter
          </button>
          <button class="share-button" data-share="linkedin">
            Share on LinkedIn
          </button>
           <button class="share-button" data-share="copy">
            Copy Link
          </button>
        </div>
      </footer>
    </div>
  </article>

  <!-- Category Hub Link -->
  {category && (
    <nav class="article-navigation">
      <a href={`/chapters/${category.slug}`} class="category-link">
        ← Back to {category.data.title}
      </a>
    </nav>
  )}

  <!-- Related Articles by Category -->
  {relatedByCategory.length > 0 && (
    <section class="related-stories">
      <h2>More from {category?.data.title || story.data.category}</h2>
      <ul class="related-list">
        {relatedByCategory.map((related: CollectionEntry<'stories'>) => (
          <li class="related-item">
            <a href={`/chapters/stories/${related.slug}`} class="related-link">
              <h3>{related.data.title}</h3>
              <p class="related-description">{related.data.description}</p>
              <div class="related-meta">
                {related.data.readingTime && (
                  <span class="reading-time">{related.data.readingTime} min read</span>
                )}
                <time datetime={related.data.pubDate.toISOString()}>
                  {new Date(related.data.pubDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
              </div>
            </a>
          </li>
        ))}
      </ul>
    </section>
  )}

  <!-- Related Articles by Tags -->
  {relatedByTags.length > 0 && (
    <section class="related-stories">
      <h2>Related Topics</h2>
      <ul class="related-list">
        {relatedByTags.map((related: CollectionEntry<'stories'>) => (
          <li class="related-item">
            <a href={`/chapters/stories/${related.slug}`} class="related-link">
              <h3>{related.data.title}</h3>
              <p class="related-description">{related.data.description}</p>
              <div class="related-meta">
                {related.data.readingTime && (
                  <span class="reading-time">{related.data.readingTime} min read</span>
                )}
                <time datetime={related.data.pubDate.toISOString()}>
                  {new Date(related.data.pubDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
              </div>
            </a>
          </li>
        ))}
      </ul>
    </section>
  )}

  {nextStory && (
    <section class="next-story">
      <h2>Next Story</h2>
      <a href={`/chapters/stories/${nextStory.slug}`} class="next-story-link">
        <h3>{nextStory.data.title}</h3>
        <p>{nextStory.data.description}</p>
      </a>
    </section>
  )}
</BaseLayout>

<style>
  .story-container {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: var(--spacing-xl) var(--spacing-md);
  }

  .story-content {
    background: var(--card-background);
    border-radius: 8px;
    box-shadow: var(--card-shadow);
    overflow: hidden;
  }

  .story-header {
    padding: var(--spacing-xl);
    text-align: center;
  }

  .story-header h1 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
  }

  .story-meta {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    color: var(--text-color-secondary);
    font-size: 0.9rem;
    margin-bottom: var(--spacing-md);
  }

  .story-tags {
    display: flex;
    justify-content: center;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .tag {
    background: var(--hover-background);
    color: var(--text-color);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
  }

  .story-image {
    width: 100%;
    margin: 0;
    background: var(--background-color);
  }

  .story-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .story-body {
    padding: var(--spacing-xl);
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-color);
  }

  .story-body :global(h2) {
    font-size: 1.8rem;
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
  }

  .story-body :global(h3) {
    font-size: 1.5rem;
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
  }

  .story-body :global(p) {
    margin-bottom: var(--spacing-md);
  }

  .story-body :global(ul),
  .story-body :global(ol) {
    margin-bottom: var(--spacing-md);
    padding-left: var(--spacing-xl);
  }

  .story-body :global(li) {
    margin-bottom: var(--spacing-sm);
  }

  .story-body :global(blockquote) {
    border-left: 4px solid var(--accent-color);
    padding-left: var(--spacing-md);
    margin: var(--spacing-lg) 0;
    font-style: italic;
    color: var(--text-color-secondary);
  }

  .story-body :global(code) {
    background: var(--hover-background);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .story-body :global(pre) {
    background: var(--hover-background);
    padding: var(--spacing-md);
    border-radius: 4px;
    overflow-x: auto;
    margin: var(--spacing-md) 0;
  }

  .story-body :global(pre code) {
    background: none;
    padding: 0;
  }

  .story-body :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: var(--spacing-md) 0;
  }

  .story-footer {
    padding: var(--spacing-xl);
    border-top: 1px solid var(--border-color);
  }

  .share-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
  }

  .share-button {
    background: var(--hover-background);
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    transition: background var(--transition-speed);
    color: var(--text-color);
  }

  .share-button:hover {
    background: var(--border-color);
  }

  .next-story {
    margin-top: var(--spacing-xl);
    padding: var(--spacing-xl);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .next-story h2 {
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }

  .next-story-link {
    display: block;
    background: var(--card-background);
    border-radius: 8px;
    box-shadow: var(--card-shadow);
    padding: var(--spacing-xl);
    text-decoration: none;
    color: var(--text-color);
    transition: transform var(--transition-speed), box-shadow var(--transition-speed);
  }

  .next-story-link:hover {
    transform: translateY(-5px);
    box-shadow: var(--page-shadow);
  }

  .next-story-link h3 {
    margin-top: 0;
    color: var(--accent-color);
  }

  .next-story-link p {
    margin-bottom: 0;
    color: var(--text-color-secondary);
  }

  .article-navigation {
    margin-top: var(--spacing-xl);
    padding: var(--spacing-lg);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .category-link {
    display: inline-block;
    color: var(--accent-color);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color var(--transition-speed);
  }

  .category-link:hover {
    text-decoration: underline;
    color: var(--accent-color-dark);
  }

  .related-stories {
    margin-top: var(--spacing-xl);
    padding: var(--spacing-xl);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .related-stories h2 {
    font-family: var(--font-display);
    font-size: 1.8rem;
    margin-bottom: var(--spacing-lg);
    color: var(--accent-color);
  }

  .related-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: var(--spacing-md);
  }

  .related-item {
    background: var(--card-background);
    border-radius: var(--border-radius);
    box-shadow: var(--card-shadow);
    transition: transform var(--transition-speed), box-shadow var(--transition-speed);
  }

  .related-item:hover {
    transform: translateY(-2px);
    box-shadow: var(--page-shadow);
  }

  .related-link {
    display: block;
    padding: var(--spacing-lg);
    text-decoration: none;
    color: inherit;
  }

  .related-link h3 {
    font-family: var(--font-display);
    font-size: 1.3rem;
    margin-bottom: var(--spacing-sm);
    color: var(--text-color);
  }

  .related-link:hover h3 {
    color: var(--accent-color);
  }

  .related-description {
    color: var(--text-color-secondary);
    font-size: 0.95rem;
    margin-bottom: var(--spacing-sm);
    line-height: 1.5;
  }

  .related-meta {
    display: flex;
    gap: var(--spacing-md);
    font-size: 0.85rem;
    color: var(--text-color-tertiary);
  }

  @media (max-width: 768px) {
    .story-container {
      padding: var(--spacing-lg) var(--spacing-sm);
    }

    .story-header h1 {
      font-size: 2rem;
    }

    .story-body {
      padding: var(--spacing-lg);
      font-size: 1rem;
    }

    .story-footer {
      padding: var(--spacing-lg);
    }

    .next-story {
      padding: var(--spacing-lg);
    }

    .next-story-link {
      padding: var(--spacing-lg);
    }
  }

</style>

<script>
  import { initShareButtons } from '../scripts/share';

  document.addEventListener('DOMContentLoaded', () => {
    initShareButtons();
  });
</script> 